{
  "version": 6,
  "cmakeMinimumRequired": { "major": 3, "minor": 18 },
  "configurePresets": [
    {
      "name": "win-vs2022-release",
      "displayName": "Windows (VS2022, Release)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "binaryDir": "out/build/${presetName}",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    },
    {
      "name": "jetson-ninja-relwithdebinfo",
      "displayName": "Jetson (Ninja, RelWithDebInfo)",
      "generator": "Ninja",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    }
  ],
  "buildPresets": [
    { "name": "win-build",   "configurePreset": "win-vs2022-release" },
    { "name": "jetson-build","configurePreset": "jetson-ninja-relwithdebinfo" }
  ],
  "testPresets": []
}
