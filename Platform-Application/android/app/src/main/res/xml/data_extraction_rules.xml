<?xml version="1.0" encoding="utf-8"?>
<!--
   MyDrive3DX Data Extraction Rules
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include general preferences for cloud backup -->
        <include domain="sharedpref" path="."/>

        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
        <exclude domain="sharedpref" path="auth_token.xml"/>
        <exclude domain="database" path="mydrive.db"/>
        <exclude domain="file" path="temp/"/>
        <exclude domain="file" path="cache/"/>
    </cloud-backup>

    <device-transfer>
        <!-- Allow general preferences for device transfer -->
        <include domain="sharedpref" path="."/>

        <!-- Exclude sensitive data from device transfer -->
        <exclude domain="sharedpref" path="encrypted_prefs.xml"/>
        <exclude domain="sharedpref" path="auth_token.xml"/>
        <exclude domain="database" path="mydrive.db"/>
    </device-transfer>
</data-extraction-rules>